<!-- Paste field for url to be shortened, option for custom generated link, plus button to show or button to -->

<h1>Enter a link and Ritly will shorten it for you!</h1>
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><em> Link <%= error %> </em></p>
	<% end %>
<% end %>

<%= form_for @url do |f| %>
  
  <%#= label_tag(:link, "Link:") %>
  <%= f.text_field :link,  :class => "form-control" %></br>

  <%= f.submit "Create", :class => "btn btn-sucess" %>
<% end %>


